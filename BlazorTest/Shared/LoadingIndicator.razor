@if (IsLoading)
{
    <div class="@(Fullscreen ? "loading-overlay" : "loading-inline")">
        <div class="@(Fullscreen ? "spinner-container" : "spinner-container-inline")">
            <div class="spinner-border @SpinnerClass" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            @if (!string.IsNullOrEmpty(Message))
            {
                <div class="mt-2">@Message</div>
            }
        </div>
    </div>
}

@code {
    /// <summary>
    /// Whether the loading indicator should be displayed
    /// </summary>
    [Parameter]
    public bool IsLoading { get; set; }

    /// <summary>
    /// Whether the loading indicator should cover the full screen/parent
    /// </summary>
    [Parameter]
    public bool Fullscreen { get; set; } = true;

    /// <summary>
    /// Optional message to display below the spinner
    /// </summary>
    [Parameter]
    public string Message { get; set; } = "Loading...";

    /// <summary>
    /// CSS class for the spinner (e.g., text-primary, text-danger)
    /// </summary>
    [Parameter]
    public string SpinnerClass { get; set; } = "text-primary";
}

<style>
    /* Fullscreen loading overlay */
    .loading-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(255, 255, 255, 0.7);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    /* Inline loading indicator */
    .loading-inline {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1rem;
    }

    /* Container for the spinner and message in fullscreen mode */
    .spinner-container {
        text-align: center;
        background-color: white;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    /* Container for the spinner and message in inline mode */
    .spinner-container-inline {
        text-align: center;
    }
</style>